# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email addresses for contact form
# From address must be a verified domain in Resend
RESEND_FROM_EMAIL=email@yourdomain.com

# Where contact form submissions should be sent
RESEND_TO_EMAIL=email@yourdomain.com

# Allowed origins for contact form POST requests (comma-separated, e.g., https://jasoncochran.io)
ALLOWED_ORIGINS=https://jasoncochran.io

# Contact form rate limit (per IP)
CONTACT_RATE_LIMIT_WINDOW_MS=60000
CONTACT_RATE_LIMIT_MAX=5

# Replicate API Configuration
# Get your API token from https://replicate.com/account/api-tokens
# Used to generate AI images for blog posts at build time
REPLICATE_API_TOKEN=r8_your_api_token_here
